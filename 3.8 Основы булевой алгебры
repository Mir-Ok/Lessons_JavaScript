Воспользуемся операторами сравнения 

// простое ИЛИ

let day = 'Воскресенье'

if (day === 'Суббота' || day === 'Воскресенье') {
  console.log(day + ' - это выходной')
} else {
  console.log(day + ' - точно не выходной')
}

--------------------------------------

// простое И 

let password = '******';

if (password.length > 3 && password.length < 26) {
  console.log('Допустимо')
} else {
  console.log('Не так длина')
}

---------------------------------------

// составное, выполняется пока не встретит первый false

let x = 8;

if (x === 13 || x > 0 && x < 11 ) {
  console.log('x равно 13, или от 0 до 10')
} 

---------------------------------------

// управление приоритетом при помощи скобок

let f = 102;

if ((f % 3 === 0 || f % 2 === 0) && f > 100 ) {
  console.log('f кратно двум или трем и больше  100')
} 

---------------------------------------

// инвертируем

let f = 102;

if (!(f % 3 === 0 || f % 2 === 0) && f > 100 ) {
  console.log('f НЕ кратно двум или трем и больше  100')
} 
