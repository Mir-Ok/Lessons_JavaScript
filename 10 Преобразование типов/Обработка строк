Подробнее https://developer.mozilla.org/ru/docs/Web/JavaScript/Reference/Global_Objects/String

Важная часть работы! Разбор входящего, БД и многое

const str = 'Строка для проверки';

str.includes('для');      // true
str.startsWith('Строка'); // true
str.endsWith('рки');      // true

// сменить регистр
str.toUpperCase();  // 'СТРОКА ДЛЯ ПРОВЕРКИ'
str.toLowerCase();  // 'строка для проверки'
str.toLowerCase().includes('проверки');  // true

// замена первого найденного
str.replace('а', 'Я');

// разделение по символу
str.split(' ');  // [ 'Строка', 'для', 'проверки' ]

// Обойти ограничение по замене первого
str.split('а').join('e');

// удаление все пробельные символы справа и слева
str.trim();

// вынуть часть строки, номер стартового индекса, количество вынимаемых
'0252546532135'.substr(3)

// найти начало подстроки, вернет первое встреченное
// пример с перемещением фамилии
str.indexOf('ка')

str.lastIndexOf('ка')  // с конца

